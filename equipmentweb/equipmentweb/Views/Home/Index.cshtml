@{
    ViewData["Title"] = "Home Page";
}

<head>
    <style>
        input[type=text],input[type=date],input[type=submit] 
        {
            width: 20%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border-radius:10px 15px;
        }
        
    </style>

</head>



<div class="text-center">
    <h1 class="display-4" style="font:bolder">Equipment</h1>
    
</div>


<h4>Add</h4>
<form action="javascript:void(0);" method="POST" onsubmit="addEquipment()" class="form">
    <div class="form-group">
        <input type="hidden" id="EquipmentId" placeholder="EquipmentId">
        <input type="text" id="EquipmentName" placeholder="EquipmentName">
        <input type="text" id="EquipmentAmount" placeholder="EquipmentAmount">
        <input type="date" id="PurchaseDate" placeholder="PurchaseDate">
        <input type="submit" value="Add" class="btn btn-success">
    </div>
</form>


<div id="editForm">
    <h4>Edit</h4>
    <form action="javascript:void(0);" onsubmit="updateItem()">
        <input type="hidden" id="editEquipmentId">
        <input type="text" id="editEquipmentName" placeholder="EquipmentName">
        <input type="text" id="editEquipmentAmount" placeholder="EquipmentAmount">
        <input type="text" id="editPurchaseDate" placeholder="PurchaseDate">
        <input type="submit" value="Save" class="btn btn-success">
        <a onclick="closeInput()" aria-label="Close">&#10006;</a>
    </form>
</div>
<div>
    <p id="counter"></p>
</div>
<div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>EquipmentId</th>
                <th>EquipmentName</th>
                <th>EquipmentAmount Type</th>
                <th>PurchaseDate</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="equipmentlist"></tbody>
    </table>
</div>

<script src="js/site.js" asp-append-version="true"></script>


<div>
    <script type="text/javascript">

        getEquipments();

    </script>
</div>
